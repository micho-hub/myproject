                        <input class="form-control" type="text" name="foodForm[image]" placeholder="Image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="foodForm[video]" placeholder="Video">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control"  type="text" name="foodForm[text]" placeholder="Text" rows="10" cols="250" maxlength="132000" required id="minle"></textarea>
                    </div>
                    <button class="newButton">Submitt</button>
                </form>
            </div>
        </div>
     </div>
