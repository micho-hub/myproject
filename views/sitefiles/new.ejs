<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="newDivPosition">
                <form action="/food" method="POST" onsubmit="var text = document.getElementById('minle').value; if(text.length < 250) { alert('You post mast have more then 250 caracters!'); return false; } return true;">
